_pkgname=system-dashboard
pkgname=system-dashboard-git
pkgver=v0.1.0
pkgrel=1
pkgdesc="GUI system monitor written in Python"
arch=("any")
url="https://github.com/FascodeNet/${_pkgname}"
license=("MIT")
depends=(
    "gtk3"
    "python"
    "python-cairo"
    "python-gobject"
    "python-psutil"
)
backup=("etc/system-dashboard.conf")
conflicts=("system-dashboard")
sha256sums=("SKIP")
makedepends+=("git")
source=("git+${url}.git")

package() {
    cd "${srcdir}/${_pkgname}"
    install -Dm755 "./system-dashboard" "${pkgdir}/usr/bin/system-dashboard"
    install -Dm755 "./system-dashboard.py" "${pkgdir}/usr/share/system-dashboard/system-dashboard.py"
    install -Dm644 "./util.py" "${pkgdir}/usr/share/system-dashboard/util.py"
    install -Dm644 "./system-dashboard.conf" "${pkgdir}/etc/system-dashboard.conf"
}
